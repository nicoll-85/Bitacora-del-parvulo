  - var boxImage = options.boxImage || '../assets/graphic-conversation.svg';
  .box&attributes(attributes)
    .box__media
      if showImage
        img.box__image(src=boxImage alt='key')
    unless hideSubtitle
      .box__subtitle #{boxSubtitle}
    .box__title #{boxTitle}
    if showDescription
      .box__description #{boxDescription}
    +link(boxLink)