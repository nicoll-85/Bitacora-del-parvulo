mixin footer()
	footer
		.footer__content.clearfix
			nav.footer__nav
				ul.footer__nav-link-list
					li
						a.footer__nav-link Terms and Conditions
					li
						a.footer__nav-link Help and Support
					li
						a.footer__nav-link Login

				+checkbox--lang().checkbox--light

			.footer__brand
				.footer__logos
					span
						img(src="https://onecampus.laureate.net/assets/images/global/logo-onecampus-white.svg")
					span
						img(src="https://onecampus.laureate.net/assets/images/homepage/laureate-footer-logo.svg")
				small.footer__copyright
					span Â© 2019 Laureate Education Inc.
					span All rights reserved.
	script(src='https://code.jquery.com/jquery-3.4.1.min.js')
	script(src='js/ux.js')