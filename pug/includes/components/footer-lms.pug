mixin new-footer-lms()
	footer
		.footer-lms
			.footer-container--lms
				.footer-content--lms.row
					.footer-brand.col-12.col-sm-6.col-md-12.col-lg-3
						a.footer-link(href="#")
							img.footer-icon(src="./images/LMS/lms-logo.svg", alt="")
					.footer-nav--lms.col-12.col-sm-6.col-md-4.col-lg-3
						ul.navbar-nav
							li.nav-item.active
								p.text-subitem Contact
							li.nav-item
								a.nav-link(href='#') Keep in Touch
							li.nav-item
								a.nav-link(href='#') About
							li.nav-item
								a.nav-link(href='#') Support
					.footer-nav--lms.col-12.col-sm-6.col-md-4.col-lg-3
						ul.navbar-nav
							li.nav-item.active
								p.text-subitem Terms
							li.nav-item
								a.nav-link(href='#') Privacy Policy and cookie policy
							li.nav-item
								a.nav-link(href='#') Featured courses
							
					.footer-leng--lms.col-12.col-sm-6.col-md-4.col-lg-3
						p.text-subitem Select your language
						ul.navbar-nav
							li.nav-item.dropdown
								a#dropdown-flag.navbar-link.navbar-link--dark.dropdown-toggle
									img.avatar-flag(src="./images/united-states-of-america.svg", alt="profile")
								.dropdown-menu.dropdown-menu__left.show(aria-labelledby='dropdown-flag')
									a.dropdown-item(href='#',)
										.dropdown-item__content
											img.icon-item(src="./images/spain.svg", alt="icon")
											p.text-item Spanish
									a.dropdown-item(href='#')
										.dropdown-item__content
											img.icon-item(src="./images/brazilian-flag.svg", alt="icon")
											p.text-item Portuguesse
						
						
				.footer-credits--lms.col-12.pr-0.pl-0
					p.text-credits--lms Â© 2019 Laureate Education Inc. All rights reserved.
						




