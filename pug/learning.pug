							+carousel-featured--mobile
							+carousel-featured--mobile-xsmall
				.col-12.mt-3
					h6.section-title__page Collections
					+carousel-collections
					+carousel-collections--mobile
		
				.col-12.mt-3
					h6.section-title__page Connections
					+carousel-connections
