include includes/head.pug
body
	+new-menu()
	.page.page--light-gray
		.page-content.container.page-content--no-min-height
			+button({'buttonTitle': 'Back','showIcon': true,'iconName': 'arrow-left'}).button--icon-left.button--back
			.input-search-container
				.input-search__text
					span.input-search__title Results for 
					span.input-search__keywords "Learning Paths"
				+button({'hideTitle': true,'showIcon': true,'iconName': 'search'}).button--transparent.button--only-icon--small.button--search-icon
				.input-search-control
					.input-search-control__icon
						svg(class="icon" role="img" aria-label="icon" aria-hidden=true)
							use(xlink:href='images/icons/oc-icons.svg#oc-search')
					input(type="text" placeholder="Search").input-search
			.control-bar
				.control-bar__result
					.control-bar__result-text 55 items found
				+button({'hideTitle': true,'showIcon': true,'iconName': 'filter'}).button--transparent.button--only-icon--small.button--filter-icon
				.control-bar__actions
					+button({'hideTitle': true,'showIcon': true,'iconName': 'list-unordered'}).button--transparent.button--only-icon--small
					+button({'hideTitle': true,'showIcon': true,'iconName': 'Grid'}).button--transparent.button--only-icon--small.button--disabled
					.dropdown--only
						a#dropdownSort.btn.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='true') Most Relevant
						.dropdown-menu.dropdown-menu--right.show(aria-labelledby='dropdownSort')
							a.dropdown-item(href='#') Most Relevant very long text
							a.dropdown-item(href='#') Popularity
							a.dropdown-item(href='#') A-Z

		.page-content.container.page-content--with-sidebar
			.sidebar-layout.sidebar-search
				.sidebar-layout__main-container.sidebar-layout__search-filters
					+filter-search()

			.container--with-sidebar.container--with-sidebar--left
				+card--basic-horizontal()
				+card--search-learning-series()
				+card--search-learning-series-in-progress()
				+card--video-with-actions--horizontal()
				.card-profiles-container
					+card--profile()
					+card--profile()
					+card--profile()
					+card--profile()
					+card--profile()
				+pagination()

		+new-footer()