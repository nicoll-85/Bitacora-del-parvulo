include includes/head.pug
body
	.page.bg-section--lms
		+lms-navbar
		.audio-container
			.audio-container--img
				.bg-audio.rounded-circle
				a.play-audio--link(href="#")
					img.play-audio--img(src="./images/Icon/Pause - Alt.svg", alt="")
			p.audio-title Ornare Vulputate Inceptos Sem Risus
			.progress-container--audio
				.progress-bar-container
					.progress-bar__marker(style={'left': 'calc('+progressValue+'% - 15px);'}) #{progressValue}
					progress(max="100" value=progressValue)
						.progress-bar--fallback
							.progress-bar__value(style={'width': progressValue+'%'})
		.controls-layout--lms
			a.control-back--lms(href="#") Back
			a.control-next--lms(href="#") Next