include includes/head.pug
body
	+new-menu()
	.page.page--light-gray.section.section--partial-background.section--partial-background--left-top.section--partial-background--small(style={'background-image': 'url("images/Polygon 6.png")'})
		.page-content.page-content--no-min-height.divider--primary-gradient

		.page-content.container.page-content--with-sidebar
			.sidebar-layout.sidebar-passport
